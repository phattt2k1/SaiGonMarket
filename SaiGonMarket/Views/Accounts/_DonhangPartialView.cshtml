@model List<Order>
@if (Model != null && Model.Count() > 0)
{
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <th>DATE</th>
                <th>DELIVERY DAY</th>
                <th>STATUS</th>
                <th>TOTAL</th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a class="account-order-id" href="javascript:void(0)">#@item.OrderId</a></td>
                    <td>@item.OrderDate</td>
                    <td>@item.ShipDate</td>
                    <td>@item.TransactStatus.Description</td>
                    <td>@item.TotalMoney.Value.ToString("#,##0") VNĐ</td>
                    <td>
                        <a class="xemdonhang" href="javascript:void(0)" data-madonhang="@item.OrderId"><span>View</span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />
    <br />
    <br />
    <hr />
    <div id="records_table">

    </div>
</div>
}
else
{
    <p>No orders yet</p>
}



